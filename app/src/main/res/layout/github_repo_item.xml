<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.jiwon.android_github_search.data.GithubRepository"/>
        <variable
            name="repository"
            type="GithubRepository" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon_repo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintWidth_percent="0.05"
            android:src="@drawable/icon_repo"
            android:adjustViewBounds="true"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:text="@{repository.fullName}"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintWidth_percent="0.3"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginLeft="5sp"
            app:layout_constraintLeft_toRightOf="@id/icon_repo"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.05">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_star_filled" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:gravity="center"
                android:text="0"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
